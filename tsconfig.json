{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "Preserve",
    "resolveJsonModule": true,

    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,

    "types": ["bun"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
