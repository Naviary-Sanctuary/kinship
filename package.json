{
  "name": "@naviary-sanctuary/kinship",
  "version": "0.1.1",
  "description": "A TypeScript toolkit for modeling, validating, and querying pedigree DAGs with explainable diagnostics.",
  "keywords": [
    "bun",
    "graph",
    "pedigree",
    "typescript"
  ],
  "homepage": "https://github.com/Naviary-Sanctuary/kinship#readme",
  "bugs": {
    "url": "https://github.com/Naviary-Sanctuary/kinship/issues"
  },
  "license": "MIT",
  "author": "Naviary Sanctuary",
  "repository": {
    "type": "git",
    "url": "https://github.com/Naviary-Sanctuary/kinship.git"
  },
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.2.0"
  },
  "packageManager": "bun@1.3.9",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "files": ["dist", "README.md", "LICENSE"],
  "publishConfig": {
    "access": "public"
  },
  "module": "index.ts",
  "scripts": {
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "oxlint .",
    "fmt": "oxfmt .",
    "build": "tsup src/index.ts --format esm --dts --clean",
    "prepublishOnly":"bun run lint && bun run typecheck && bun test && bun run build"
  },
  "devDependencies": {
    "@types/bun": "1.3.9",
    "oxfmt": "^0.34.0",
    "oxlint": "^1.49.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
